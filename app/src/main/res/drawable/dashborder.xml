<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item
        android:bottom="-20px"
        android:left="2px"
        android:right="2px"
        android:top="-20px">
        <shape>
            <stroke
            android:color="@color/colorPrimary"
            android:dashGap="5dp"
            android:width="2dp"
            android:dashWidth="2.0dp" />
        </shape>
    </item>
</layer-list>

