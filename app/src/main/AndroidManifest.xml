<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kkgroup.soundscape_v2">

    <!-- permissions for audio recording -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- permission for internet usage -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RecordingActivity" />
        <activity android:name=".activity.LocalAudioFilesActivity" />
        <activity android:name=".activity.SelectAudioActivity" />
        <activity android:name=".activity.RemoteAudioFilesActivity" />
        <activity android:name=".activity.PlayActivity" />
        <activity android:name=".activity.NewSoundscapeActivity"></activity>
    </application>

</manifest>